{
  "name": "webpack-react-npm",
  "version": "1.0.0",
  "description": "Babel and React, bundled with Webpack for creating NPM modules",
  "main": "./lib/app.js",
  "module": "./lib/app.js",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-jest": "^22.0.4",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-react-display-name": "^6.25.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "clean-webpack-plugin": "^0.1.17",
    "css-loader": "^0.28.8",
    "del-cli": "^1.1.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.0",
    "eslint": "^4.15.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "extract-text-webpack-plugin": "^3.0.2",
    "html-webpack-plugin": "^2.30.1",
    "husky": "^0.14.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^22.0.4",
    "lint-staged": "^6.0.0",
    "node-sass": "^4.7.2",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.9.2",
    "regenerator-runtime": "^0.11.1",
    "sass-loader": "^6.0.6",
    "uglifyjs-webpack-plugin": "^1.1.6",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.10.0",
    "webpack-merge": "^4.1.1"
  },
  "scripts": {
    "start": "start http://localhost:3000 && webpack-dev-server --config webpack/dev.config.js",
    "build:npm": "npm-run-all clean:lib babel:npm sass:npm",
    "build:webpack": "webpack --config webpack/prod.config.js",
    "sass": "node-sass -w ./src/scss/index.scss ./src/css/index.css",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "precommit": "lint-staged",
    "lint": "eslint ./src/js/*.js",
    "clean:lib": "del-cli ./lib/*",
    "babel:npm": "babel src/js/ --out-dir ./lib/ --ignore src/js/dev.js",
    "sass:npm": "node-sass ./src/scss/index.scss ./lib/css/index.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Demosth3nes/webpack-react-npm.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Demosth3nes/webpack-react-npm/issues"
  },
  "homepage": "https://github.com/Demosth3nes/webpack-react-npm#readme",
  "dependencies": {
    "eslint-plugin-react": "^7.5.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  },
  "jest": {
    "setupFiles": [
      "./tests/jestsetup.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "moduleNameMapper": {
      "^.+\\.(css|scss)$": "identity-obj-proxy"
    },
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": -10
      }
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ],
    "src/**/*.js": [
      "prettier --write",
      "test:coverage --bail --findRelatedTests",
      "git add"
    ]
  }
}
